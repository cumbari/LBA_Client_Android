<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    >

    <ImageView
        android:id="@+id/categories_coupon_image"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_margin="5dip"
        android:src="@drawable/categories"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:id="@+id/categories_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/categories_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:singleLine="true"
                android:textSize="@dimen/medium_text"
                android:layout_gravity="center"
                android:textColor="@color/subTitleColor"
                />

            <ImageView
                android:id="@+id/categories_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_marginLeft="5dip"
                android:padding="5dip"
                />
        </LinearLayout>

         <TextView
            android:id="@+id/categories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Title"
            android:singleLine="true"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:layout_margin="8dip"
            android:layout_toRightOf="@+id/categories_coupon_image"
            android:layout_toLeftOf="@+id/categories_number_layout"
             android:layout_centerVertical="true"
            />

    <TextView
        android:id="@+id/category_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/categories_coupon_image"
        android:layout_marginTop="2dip"
        />
</RelativeLayout>

